<!-- select all Emp -->
<select id="selectAllEmp" resultType="EmpVO">
	SELECT *
	FROM emp
</select>
<!-- select all Dept -->
<select id="selectAllDept" resultType="DeptVO">
	SELECT *
	FROM dept
</select>
